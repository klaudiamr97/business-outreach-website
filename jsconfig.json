{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.js",
    "src/components/ListBlock.jsx",
    "src/components/CaseStudies.jsx",
    "src/components/CTA.jsx",
    "src/components/Hero.jsx",
    "src/components/ImageText.jsx",
    "src/components/OpportunitiesBlock.jsx",
    "src/components/Footer.jsx",
    "src/app/page.jsx",
    "src/app/layout.jsx",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
